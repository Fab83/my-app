<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <title>Liste des propriétaires</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">
  <%- include('../partials/header') %>

    <div class="container mt-4">
      <h2 class="mb-4">Liste des Propriétaires</h2>

      <a href="/proprietaires/nouveau" class="btn btn-success mb-3">Ajouter un propriétaire</a>
      <a href="../logements/nouveau" class="btn btn-info mx-3 mb-3">Ajouter un logement</a>

      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <!-- <th>ID</th> -->
            <th>Nom</th>
            <!-- <th>Prénom</th> -->
            <th>Email</th>
            <th>Ville</th>
            <th>Statut</th>
            <!-- <th>Revenu Fiscal</th> -->
            <!-- <th>Nombre de personnes</th> -->
            <!-- <th>Logements</th> -->
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% proprietaires.forEach(proprio=> { %>
            <tr>
              <!-- <td>
                <%= proprio.id %>
              </td> -->
              <td>
                <%= proprio.nom %>
              </td>
              <!-- <td>
                <%= proprio.prenom %>
              </td> -->
              <td>
                <%= proprio.email %>
              </td>
              <td>
                <%= proprio.villeProp %>
              </td>
              <td>
                <%= proprio.statut %>
              </td>
              <!-- <td>
                <%= proprio.revenuFiscal %> €
              </td>
              <td>
                <%= proprio.nombrePersonnes %>
              </td> -->
              <!-- <td>
                <% if (proprio.logements.length> 0) { %>
                  <ul>
                    <% proprio.logements.forEach(logement=> { %>
                      <li>
                        <%= logement.adresse %>
                      </li>
                      <% }) %>
                  </ul>
                  <% } else { %> Aucun <% } %>
              </td> -->
              <td>
                <a href="/proprietaires/<%= proprio.id %>/modifier" class="btn btn-sm btn-warning">Modifier</a>
                <form action="/proprietaires/<%= proprio.id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">
                    Supprimer
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>