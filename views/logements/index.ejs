<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8" />
    <title>Liste des logements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">
    <%- include('../partials/header') %>

        <div class="container mt-4">
            <h2>Liste des logements</h2>
            <a href="/logements/nouveau" class="btn btn-primary mb-3">Ajouter un logement</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <!-- <th>ID</th> -->
                        <th>Propriétaire</th>
                        <th>Adresse</th>
                        <th>Ville</th>
                        <th>Type de logement</th>
                        <th>Type de bâtiment</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% logements.forEach(logement=> { %>
                        <tr>
                            <!-- <td>
                                <%= logement.id %>
                            </td> -->
                            <td>
                                <%= logement.proprietaire.nom %>
                                    <%= logement.proprietaire.prenom %>
                            </td>
                            <td>
                                <%= logement.adresse %>
                            </td>
                            <td>
                                <%= logement.ville %>
                            </td>
                            <td>
                                <%= logement.typeLogement %>
                            </td>
                            <td>
                                <%= logement.typeBatiment %>
                            </td>
                            <td>
                                <a href="/logements/<%= logement.id %>/modifier"
                                    class="btn btn-warning btn-sm">Modifier</a>
                                <form action="/logements/<%= logement.id %>?_method=DELETE" method="POST"
                                    class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>