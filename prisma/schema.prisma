datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  email    String  @unique
}

model Proprietaire {
  id        Int        @id @default(autoincrement())
  nom       String
  prenom    String
  createdAt DateTime @default(now())
  physMorale  String
  email     String     @unique
  telephone String?
  adresseProp String
  villeProp     String
  statut    String
  revenuFiscal  Int
  nombrePersonnes Int
  logements Logement[]
}

model Logement {
  id               Int          @id @default(autoincrement())
  adresse          String
  ville            String?
  typeLogement  String
  typeBatiment  String
  anneeConstruction Int?
  surfaceAvant          Float?
  surfaceApres          Float?
  type              String
  modeChauffage   String?
  chauffageSecondaire String
  chauffageEmission String
  VMC   String
  ProductionEnr String
  niveauIsolationSol  String
  niveauIsolationMurs  String
  niveauIsolationToit  String
  vitrage   String
  eauChaude       String?
  classeDPE       String
  projet        String
  proprietaireId   Int
  proprietaire     Proprietaire @relation(fields: [proprietaireId], references: [id])
}
